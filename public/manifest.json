{
	"manifest_version": 3,
	"name": "Hue Harvester",
	"description": "Extract colors from a website using CSS and image processing",
	"version": "0.0.1",
	"permissions": [
		"scripting",
		"activeTab"
	],
	"action": {
		"default_popup": "index.html",
		"default_icon": "hue_harvester.png"
	},
	"host_permissions": [
		"*://*/*"
	]
}
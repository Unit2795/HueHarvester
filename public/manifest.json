{
	"manifest_version": 3,
	"name": "Hue Harvester",
	"description": "Extract colors from a website using CSS and image processing",
	"version": "1.0",
	"permissions": [
		"scripting",
		"activeTab",
		"debugger"
	],
	"action": {
		"default_popup": "index.html",
		"default_icon": "hue_harvester.png"
	},
	"host_permissions": [
		"*://*/*"
	],
	"web_accessible_resources": [
		{
			"resources": ["html2canvas.min.js"],
			"matches": ["<all_urls>"]
		}
	]
}